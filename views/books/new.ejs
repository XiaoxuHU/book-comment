<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-capitalize" style="text-align:center;">create a new book</h1>
        <div style="width:30%;margin:40px auto;">
            <form action="/books" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="book[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[bookAuthor]" placeholder="author">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="book[price]" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[image]" placeholder="image url">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="book[description]" rows="3" placeholder="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/books">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>