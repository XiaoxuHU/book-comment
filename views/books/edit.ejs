<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-capitalize" style="text-align:center;">edit <%= book.name%></h1>
        <div style="width:30%;margin:40px auto;">
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="book[name]" value="<%= book.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[bookAuthor]" value="<%= book.bookAuthor %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="book[price]" value=<%= book.price %> min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[image]" value="<%= book.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="book[description]" rows="3"><%= book.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/books">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>