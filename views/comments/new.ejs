<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-capitalize" style="text-align:center;">add new comment to <%= book.name %></h1>
        <div style="width:30%;margin:40px auto;">
            <form action="/books/<%= book._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/books/<%= book._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>